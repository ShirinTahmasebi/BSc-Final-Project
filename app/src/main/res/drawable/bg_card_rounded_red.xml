        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/holo_red_dark"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item
        android:left="4dp"
        android:right="5dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <item android:right="5dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

</layer-list>