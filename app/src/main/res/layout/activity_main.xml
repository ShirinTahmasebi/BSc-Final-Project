<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                   android:background="@drawable/grid_item_blue"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                   android:background="@drawable/grid_item_dark_purple"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                   android:background="@drawable/grid_item_green"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                   android:background="@drawable/grid_item_orange"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                   android:background="@drawable/grid_item_purple"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                   android:background="@drawable/grid_item_red"/>

    </RelativeLayout>

</LinearLayout>