<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/component_default_margin"
    android:background="@drawable/bg_card_rounded_primarydark"
    android:padding="@dimen/activity_padding_normal">

    <shirin.tahmasebi.mscfinalproject.view.FontableTextView
        android:id="@+id/history_organizationName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#00FFFFFF"
        android:paddingTop="@dimen/component_default_padding"
        android:textSize="@dimen/txt_medium"
        app:customFont="IRAN-Sans-Bold.ttf" tools:ignore="RelativeOverlap"/>

    <LinearLayout android:id="@+id/history_moreDetails_linearLayout"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:layout_below="@+id/history_organizationName_textView"
                  android:orientation="horizontal"
                  android:paddingBottom="@dimen/component_default_padding">

        <ImageView android:layout_width="15dp"
                   android:layout_height="15dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginEnd="@dimen/component_default_margin"
                   android:layout_marginRight="@dimen/component_default_margin"
                   android:src="@drawable/more_detail_icon" tools:ignore="ContentDescription"/>
        <shirin.tahmasebi.mscfinalproject.view.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/lable_history_moreDetails"
            android:textSize="@dimen/txt_small"
            app:customFont="IRAN-Sans-Bold.ttf"/>


    </LinearLayout>


    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/component_default_padding"
                    android:paddingTop="@dimen/component_default_padding">

        <ImageView android:layout_width="@dimen/image_default_width"
                   android:layout_height="@dimen/image_default_height"
                   android:layout_centerVertical="true"
                   android:background="@drawable/write_sms_icon"
                   tools:ignore="ContentDescription"/>
    </RelativeLayout>
</RelativeLayout>