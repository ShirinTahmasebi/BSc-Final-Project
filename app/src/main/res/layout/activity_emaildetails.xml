<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"
             app:layout_heightPercent="12%"
             app:layout_widthPercent="100%"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".history.EmailDetailActivity">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <shirin.tahmasebi.mscfinalproject.view.FontableTextView
                android:id="@+id/emailDetails_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:textSize="@dimen/txt_medium"
                app:customFont="IRAN-Sans-Bold.ttf"/>

            <shirin.tahmasebi.mscfinalproject.view.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/component_default_margin"
                android:text="@string/lable_emailDetail_date"
                android:textColor="@color/primaryDark"
                android:textSize="@dimen/txt_small"
                app:customFont="IRAN-Sans-Bold.ttf"/>

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/component_default_margin"
                      android:gravity="right"
                      android:orientation="vertical">

            <shirin.tahmasebi.mscfinalproject.view.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/component_default_margin"
                android:background="#00FFFFFF"
                android:text="@string/lable_emailDetail_text"
                android:textColor="@color/primaryDark"
                android:textSize="@dimen/txt_small"
                app:customFont="IRAN-Sans-Bold.ttf"/>

            <shirin.tahmasebi.mscfinalproject.view.FontableTextView
                android:id="@+id/emailDetails_mailText_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="@dimen/txt_medium"
                app:customFont="IRAN-Sans-Bold.ttf"/>

        </LinearLayout>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>