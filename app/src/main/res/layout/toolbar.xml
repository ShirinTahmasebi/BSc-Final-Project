<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tool_bar"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/primaryDark"
    android:elevation="4dp" tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <shirin.tahmasebi.mscfinalproject.view.FontableTextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end|center_vertical"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingStart="15dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:customFont="IRAN-Sans-Bold.ttf"/>

        <LinearLayout android:id="@+id/toolbar_help_linearLayout"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"
                      android:gravity="center_vertical">

            <ImageView android:id="@+id/toolbar_help_imageview"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:background="@drawable/toolbar_help_icon"
                       android:contentDescription="" tools:ignore="ContentDescription"/>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>