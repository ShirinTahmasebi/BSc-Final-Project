<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="WriteFabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_vertical_margin</item>
        <item name="android:src">@drawable/write_icon_white</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="RateFabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_vertical_margin</item>
        <item name="android:src">@drawable/favorite_disable_icon_white</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>


    <style name="FabMenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FieldHintDefaultAccentStyle">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="FieldHintDefaultBlackStyle">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FieldHintErrorStyle">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="FieldStyle">
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="EditTextBottomLineStyle">
        <item name="android:background">@drawable/bg_bottom_line_edit_text</item>
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginBottom">@dimen/component_default_margin</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>


</resources>
